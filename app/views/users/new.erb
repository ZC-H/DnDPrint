<h2>Sign up for an account!</h2>

<%= form_for @user do |f| %>
	<%= f.label "Email:" %><br>
  <%= f.text_field :email %><br>
	<%= f.label "Password:" %><br>
  <%= f.password_field :password %><br>
	<%= f.label "Confirm Password:" %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Sign up!", :class => 'btn btn-primary btn-lg' %>
<% end  %>